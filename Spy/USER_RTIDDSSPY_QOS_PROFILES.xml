<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:noNamespaceSchemaLocation="https://community.rti.com/schema/6.1.2/rti_dds_qos_profiles.xsd">

    <!-- Qos Library -->
    <qos_library name="LBEDiscoveryPluginExample_Library">

        <qos_profile name="LBEDiscoveryPluginExample_Profile" base_name="BuiltinQosLib::Generic.StrictReliable" is_default_qos="true">
            <domain_participant_qos>
                <transport_builtin>
                    <!-- Enable only UDPv4 and locahost so this works with Micro in a PC with many interfaces -->
                    <mask>UDPv4</mask>
                    <udpv4>
                        <allow_interfaces_list>
                            <element>127.0.0.1</element>
                        </allow_interfaces_list>
                    </udpv4>
                </transport_builtin>
                <discovery_config>
                    <builtin_discovery_plugins>DPSE</builtin_discovery_plugins>
                </discovery_config>
                <property>
                    <value>
                        <element>
                            <name>dds.discovery.endpoint.lbediscovery.config_file</name>
                            <value>C:\shared\github_repos\rticonnextdds-dpse-examples\Spy\LBEDSpy.xml</value>
                        </element>
                    </value>
                </property>
            </domain_participant_qos>
        </qos_profile>

        <!-- The QoS profile used by the subscribing entities -->
        <qos_profile name="LBEDiscoveryPluginExampleSubscriber_Profile" base_name="LBEDiscoveryPluginExample_Profile">
            <domain_participant_qos>
                <participant_name>
                    <name>Data Visualization</name>
                </participant_name>
            </domain_participant_qos>
            <datareader_qos>
                <protocol>
                    <rtps_object_id>200</rtps_object_id>
                </protocol>
                <reliability>
                    <kind>RELIABLE_RELIABILITY_QOS</kind>
                </reliability>
                <resource_limits>
                    <max_samples_per_instance>10000</max_samples_per_instance>
                    <max_samples>10000</max_samples>
                </resource_limits>
            </datareader_qos>
        </qos_profile>
    </qos_library>

    <qos_library name="RtiddsspyDPSE">
        <qos_profile name="DPSE">
            <domain_participant_qos base_name="LBEDiscoveryPluginExample_Library::LBEDiscoveryPluginExampleSubscriber_Profile"/>
            <datareader_qos base_name="LBEDiscoveryPluginExample_Library::LBEDiscoveryPluginExampleSubscriber_Profile"/>
        </qos_profile>
    </qos_library>
</dds>
