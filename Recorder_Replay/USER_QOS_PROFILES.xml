<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:noNamespaceSchemaLocation="http://community.rti.com/schema/7.1.0/rti_dds_profiles.xsd">

    <qos_library name="LBEDiscoveryPluginExample_Library">

        <qos_profile name="LBEDiscoveryPluginExample_Profile" base_name="BuiltinQosLib::Generic.StrictReliable" is_default_qos="true">
            <domain_participant_qos>
                <transport_builtin>
                    <!-- Enable only UDPv4 and locahost so this works with Micro in a PC with many interfaces -->
                    <mask>UDPv4</mask>
                    <udpv4>
                        <allow_interfaces_list>
                            <element>127.0.0.1</element>
                        </allow_interfaces_list>
                    </udpv4>
                </transport_builtin>
                <discovery_config>
                    <builtin_discovery_plugins>DPSE</builtin_discovery_plugins>
                </discovery_config>
            </domain_participant_qos>
        </qos_profile>

        <!-- The QoS profile used by the publishing entities -->
        <qos_profile name="LBEDiscoveryPluginExamplePublisher_Profile" base_name="LBEDiscoveryPluginExample_Profile">
            <domain_participant_qos>
                <participant_name>
                    <name>publisher</name>
                </participant_name>
            </domain_participant_qos>
            <datawriter_qos>
                <protocol>
                    <rtps_object_id>100</rtps_object_id>
                </protocol>
                <reliability>
                    <kind>RELIABLE_RELIABILITY_QOS</kind>
                </reliability>
            </datawriter_qos>
        </qos_profile>

        <!-- The QoS profile used by the subscribing entities -->
        <qos_profile name="LBEDiscoveryPluginExampleSubscriber_Profile" base_name="LBEDiscoveryPluginExample_Profile">
            <domain_participant_qos>
                <participant_name>
                    <name>Data Visualization</name>
                </participant_name>
            </domain_participant_qos>
            <datareader_qos>
                <protocol>
                    <rtps_object_id>200</rtps_object_id>
                </protocol>
                <reliability>
                    <kind>RELIABLE_RELIABILITY_QOS</kind>
                </reliability>
            </datareader_qos>
        </qos_profile>
    </qos_library>

    <types>
        <include file="../HelloWorld.xml"/>
    </types>

    <domain_library name="LBEDiscoveryPluginExample_Domain_Library">
        <!-- IMPORTANT: change the domain_id value if you plan to use a
            domain different than 0 -->
        <domain name="LBEDiscoveryPluginExample_Domain" domain_id="0">
            <register_type name="HelloWorld" type_ref="HelloWorld"/>
            <topic name="Example HelloWorld" register_type_ref="HelloWorld"/>
        </domain>
    </domain_library>

    <domain_participant_library name="ExampleLBED_DomainParticipant_Library">
        <domain_participant name="publisher"
                domain_ref="LBEDiscoveryPluginExample_Domain_Library::LBEDiscoveryPluginExample_Domain">
            <publisher name="Pub">
                <data_writer name="DW" topic_ref="Example HelloWorld">
                    <datawriter_qos base_name="LBEDiscoveryPluginExample_Library::LBEDiscoveryPluginExamplePublisher_Profile"/>
                </data_writer>
            </publisher>
        </domain_participant>

        <domain_participant name="Data Visualization"
                domain_ref="LBEDiscoveryPluginExample_Domain_Library::LBEDiscoveryPluginExample_Domain">
            <subscriber name="Sub">
                <data_reader name="DR" topic_ref="Example HelloWorld">
                    <datareader_qos base_name="LBEDiscoveryPluginExample_Library::LBEDiscoveryPluginExampleSubscriber_Profile"/>
                </data_reader>
            </subscriber>
        </domain_participant>
    </domain_participant_library>

</dds>

